<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
>

    <ImageView
        android:id="@+id/playlist_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        tools:layout_width="150dp"/>

    <org.oneat1.android.util.TypefaceTextView
        android:id="@+id/playlist_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/playlist_thumbnail"
        android:ellipsize="end"
        android:maxLines="2"
        app:typeface="font_helvetica_regular"/>

    <org.oneat1.android.util.TypefaceTextView
        android:id="@+id/playlist_descr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/playlist_title"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/playlist_thumbnail"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="10sp"
        app:typeface="font_helvetica_regular"/>

</RelativeLayout>